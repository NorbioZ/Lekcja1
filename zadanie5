package com.company;
import java.util.Scanner;

public class Main {


    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println ("Podaj liczbę, która będzie odpowiadać dniu tygodnia ");
        int Dzień = scan.nextInt();

        switch (Dzień) {
            case 1:
                System.out.println("poniedziałek");
                break;
            case 2:
                System.out.println("wtorek");
                break;

            case 3:
                System.out.println("środa");
                break;
            case 4:
                System.out.println("zzwartek");
                break;

            case 5:
                System.out.println("piątek");
                break;
            case 6:
                System.out.println("sobota");
                break;

            case 7:
                System.out.println("niedziela");
                break;
                //Norbert Kulik
        }
    }
}
